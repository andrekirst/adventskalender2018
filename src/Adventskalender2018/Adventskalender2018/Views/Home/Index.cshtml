@model AlleTuerenModel;

@{
    ViewData[index: "Title"] = "Home Page";
}

<style>
    .tuer {
        max-width: 100px;
        min-width: 100px;
        min-height: 100px;
        max-height: 100px;
        margin: 20px;
        -webkit-appearance: button;
        -moz-appearance: button;
        text-decoration: none;
        vertical-align: middle;
        text-align: center;
        font-size: 60px;
        opacity: 0.7;
        border-color: gold;
        border-width: 4px;
        border-radius: 5px;
    }

    .tuer_geoffnet {
        background-color: green;
        color: black;
    }

    .tuer_geschlossen {
        background-color: darkred;
        color: white;
    }
</style>

<div class="container-fluid">
    @foreach (AdventstuerModel adventstuer in Model.Adventstueren)
    {
        if (adventstuer.BereitsErfolgreichGeoeffnet)
        {
            <a asp-controller="Tuerchen"
               asp-action="Tuer"
               asp-route-tag="@adventstuer.Tag"
               class="tuer tuer_geoffnet">
                @adventstuer.Tag
            </a>
        }
        else
        {
            <a asp-controller="Tuerchen"
               asp-action="Tuer"
               asp-route-tag="@adventstuer.Tag"
               class="tuer tuer_geschlossen">
                @adventstuer.Tag
            </a>
        }
    }
</div>
